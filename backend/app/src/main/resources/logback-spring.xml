<?xml version="1.0" encoding="UTF-8"?>
<configuration  scan="true" scanPeriod="60 seconds" debug="false" >

    <!--输出到控制台-->
    <appender name="Console" class="com.fy.common.config.MyConsoleAppender">
        <withJansi>true</withJansi>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %black(%d) %highlight(%-5level) [%boldYellow(%t)] %boldGreen(%C{1.}:%method:%line) %msg%n%throwable
            </Pattern>
        </layout>
    </appender>

    <!--  LOG_PATH:  logback.xml 加载早于spring, 所以要在系统中设置，无法读取到application.yml中的配置-->
    <!--  LOG_PATH:  logback-spring.xml 加载晚于spring, 可以读取到application.yml中的配置: logging.file.path -->
    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <!-- 日志保存周期 -->
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss} [%thread] %-5level %C{1.} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="WARN">
        <appender-ref ref="Console" />
        <appender-ref ref="RollingFile" />
    </root>

    <logger name="com.fy" level="INFO" additivity="false">
        <appender-ref ref="Console" />
        <appender-ref ref="RollingFile" />
    </logger>

    <logger name="reactor.netty.http.client" level="DEBUG" additivity="false">
        <appender-ref ref="Console" />
    </logger>

</configuration>
